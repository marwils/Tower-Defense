# Unity C# Style (.editorconfig)
root = true

[*.cs]

indent_style = space
indent_size = 4

charset = utf-8

dotnet_naming_rule.private_fields_should_have_underscore.severity = suggestion
dotnet_naming_rule.private_fields_should_have_underscore.symbols = private_fields
dotnet_naming_rule.private_fields_should_have_underscore.style = underscore_prefix_style

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.accessibility = private
dotnet_naming_symbols.private_fields.required_modifiers = 

dotnet_naming_style.underscore_prefix_style.capitalization = camel_case
dotnet_naming_style.underscore_prefix_style.required_prefix = _
dotnet_naming_style.underscore_prefix_style.required_suffix = 

dotnet_sort_system_directives_first = true
dotnet_separate_import_directive_groups = true

csharp_preferred_modifier_order = public, protected, private, internal, static, readonly, const, abstract, virtual, override, async
csharp_preferred_modifier_order_severity = suggestion
